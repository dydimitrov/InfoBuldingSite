@model List<Apartment>
<div class="container mt-5">

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>№ апартамент</th>
                <th>Етаж</th>
                <th>Описание</th>
                <th>Площ</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                var counter = 1;
                foreach (var apartment in Model)
                {
            <tr>
                <td>@counter</td>
                <td>@apartment.Number</td>
                <td>@apartment.Floor</td>
                <td>@apartment.Description</td>
                <td>@apartment.Area</td>
                @if (apartment.IsSold)
                {
                    <td>Продаден</td>
                }
                else
                {
                    <td>Свободен</td>
                }
            </tr>
                    counter++;
                }
            }
        </tbody>
    </table>
</div>