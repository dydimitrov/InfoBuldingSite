@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Apartments for sale">
    <meta name="author" content="DY Designs">
    <title>Джи Ес Джи</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/modern-business.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark" style="background-color:#89C644">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Джи Ес Джи</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-link"><a class="text-white" asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
                    <li class="nav-link"><a class="text-white" asp-area="" asp-controller="Home" asp-action="About">За нас</a></li>
                    <li class="nav-link"><a class="text-white" asp-area="" asp-controller="Home" asp-action="Contact">Контакти</a></li>
                    <li class="nav-link"><a class="text-white" asp-area="" asp-controller="Home" asp-action="FinishedProjects">Завършени проекти</a></li>
                </ul>
                <ul class="navbar-nav nav-right">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (this.User.IsInRole("Admin"))
                        {
                            <li class="nav-link dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Администрация
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Create">Добави Жилище</a>
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="CreateGarage">Добави Гараж</a>
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="All">Всички имоти</a>
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="AllGarages">Всички гаражи</a>
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="AllRequests">Всички запитвания</a>
                                </div>
                            </li>
                        }
                        <li class="nav-link">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-light">Изход</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-link">
                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Влез</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <hr />
    <footer class="footer" style="background-color:#89C644">
        <div class="container">
            <div class="row d-none d-lg-block d-xl-block">
                <div class="col-6 offset-3">
                    <ul class="list-inline " style="margin-right: 20px">
                        <li>
                            <i class="fa fa-phone"></i><span class="text-white"> +359 899 867 250</span>
                            <i class="fa fa-phone"></i><span class="text-white"> +359 899 983 573</span>
                            <i class="fa fa-phone"></i><span class="text-white"> +359 897 077 363</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-6 offset-3 d-xs-block d-sm-block d-md-block d-lg-none d-xl-none">
                <ul class="list-inline " style="margin-right: 20px">
                    <li>
                        <div class="row"><i class="fa fa-phone"></i><span class="text-white"> +359 899 867 250</span></div>
                        <div class="row"><i class="fa fa-phone"></i><span class="text-white"> +359 899 983 573</span></div>
                        <div class="row"><i class="fa fa-phone"></i><span class="text-white"> +359 897 077 363</span></div>
                    </li>
                </ul>
            </div>
            <p class="m-1 text-center text-white">Copyright &copy; Джи Ес Джи ЕООД 2018</p>
        </div>
    </footer>


    <environment include="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/vendor/jquery/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/vendor/jquery/jquery.min.js"
                asp-fallback-src="~/vendor/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
